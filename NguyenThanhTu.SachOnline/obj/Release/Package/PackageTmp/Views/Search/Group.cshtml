@model IEnumerable<IGrouping<int?, NguyenThanhTu.SachOnline.Models.SACH>>
@{
    ViewBag.Title = "Group";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>DANH SÁCH THEO CHỦ ĐỀ</h2>

@foreach (var item in Model)
{
    <div>
        <h4 style="font-weight: bold; color: red;">
            MÃ CHỦ ĐỀ @item.Key;
        </h4>
        <table boder="1">
            <tr style="background-color:burlywood; font-weight:bold">
                <td>Mã sách</td>
                <td>Tên sách</td>
                <td>Tên chủ đề</td>
            </tr>      
            @foreach (var sach in item)
                {
                    <tr>
                        <td>@sach.MaSach</td>
                        <td>@sach.TenSach</td>
                        <td>@sach.CHUDE.TenChuDe</td>
                    </tr>
                }
        </table>
    </div>
}
